{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "suspicious": {
        "noConstEnum": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noImplicitBoolean": "off",
        "useBlockStatements": "off",
        "noDefaultExport": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    },
    "ignore": ["node_modules", "dist", "styled-system"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": ["node_modules", "dist", "styled-system"]
  }
}
